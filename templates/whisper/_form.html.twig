{% form_theme form 'bootstrap_5_layout.html.twig' %}
<script>
function spinner() {
  var x = document.getElementById("mySpinner");
  var y = document.getElementById("mySubmit");
  if (x.style.display === "none") {
    y.style.display = "none";
    x.style.display = "block";
  } else {
    y.style.display = "block";
    x.style.display = "none";
  }
}
</script>


{{ form_start(form) }}
<div class="form-group">
    {{ form_widget(form) }}   
    {{ form_help(form) }}   
    <br>
    <div id="mySubmit">
        <button class="btn btn-success" onclick="spinner()">{{ button_label|default('Traiter le document') }}</button>
    </div>
    <div id="mySpinner" style="display:none;">
        <button class="btn btn-primary" type="button" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Traitement en cours...
    </div>
</div>
{{ form_end(form) }}